<%# Below we call the boilerplate layout and ejs is able to pass in an object which we call title %>
<%- include('../partials/boilerplate', {title: "New Post"}); %>
<%- include('../partials/navbar'); %>

<div class="row-md">
    <h1 class="text-center">Create new post</h1>
    <div class="col-6 offset-3">
        <form action="/posts" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" class="form-control" name="post[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please choose a title.
                </div>
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <textarea type="text" id="description" name="post[description]" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please choose a description.
                </div>
            </div>
            <button class="submitButton">Submit post</button>
        </form>
        <a href="/posts">All Posts</a>
    </div>
</div>

<%- include('../partials/footer'); %>