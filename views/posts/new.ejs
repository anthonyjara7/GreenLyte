<%# Below we call the boilerplate layout and ejs is able to pass in an object which we call title %>
<%- include('../partials/boilerplate', {title: "New Post"}); %>
<%- include('../partials/navbar'); %>

<div class="card col-8 offset-2 p-3">
    <h1 class="text-center">Create new post</h1>
    <form action="/bulletins/<%- bulletinId %>/posts" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" name="post[title]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a title.
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="post[description]" rows="3" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a description.
            </div>
        </div>
        <button class="submitButton">Submit post</button>
    </form>
    <a href="/bulletins/allposts">All Posts</a>
</div>


<%- include('../partials/footer'); %>