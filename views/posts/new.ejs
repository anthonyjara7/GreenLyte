<%# Below we call the boilerplate layout and ejs is able to pass in an object which we call title %>
<%- include('../partials/boilerplate', {title: "New Post"}); %>
<%- include('../partials/navbar'); %>

<main class="container-lg mt-5">
    <div class="row">
        <h1 class="text-center">Create new post</h1>
        <div class="col-6 offset-3">
            <form action="/posts" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="author">Author</label>
                    <input type="text" id="author" name="post[author]" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a name.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description">Description</label>
                    <textarea type="text" id="description" name="post[description]" rows="3" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a description.
                    </div>
                </div>
                <button id="submitButton">Submit post</button>
            </form>
            <a href="/posts">All Posts</a>
        </div>
    </div>
</main>

<%- include('../partials/footer'); %>