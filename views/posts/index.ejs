<%# Below we call the boilerplate layout and ejs is able to pass in an object which we call title %>
<%- include('../partials/boilerplate', {title: "All Posts"}); %>
<%- include('../partials/navbar'); %>

<main class="container-lg mt-5">
    <div class="row">
        <div class="col-6 offset-1">
            <h1>All Posts</h1>
            <div>
                <a href="/posts/new">Create new post</a>
            </div>
            <div class="mt-2">
                <% for (let post of posts) { %>
                    <div class="card p-2">
                        <a href="/posts/<%= post._id %>"><%= post.author %> wrote: <%= post.title %></a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer'); %>